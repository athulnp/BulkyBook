@model Category

@{
    ViewData["Title"] = "Delete";
}



<form method="post" asp-action="DeletePost">
    <div class="border p-3 m-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input disabled asp-for="Name" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input disabled asp-for="DisplayOrder" class="form-control" />
        </div>
        <button class="btn btn-danger" style="width:150px">Delete</button>
        <a class="btn btn-secondary" style="width:150px" asp-action="Index">Cancel</a>
    </div>

</form>
