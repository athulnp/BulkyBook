@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}
<partial name="_Notification"></partial>
<div class="conatiner p-3">
    <div class="row pt-4 mb-4">
        <div class="col-6">
            <h4 class="text-primary">Category List</h4>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Product" asp-action="Upsert">
                <i class="bi bi-plus-circle-fill"></i> &nbsp; Create a New Category
            </a>
        </div>
    </div>
    <table  id="productTable" class="table table-boardered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>ISBN</th>
                <th>Author</th>
                <th>ListPrice</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @*<tr>
                <td></td>
                <td></td> 
                <td></td>
                <td></td> 
                <td></td>
                <td></td>
            </tr>*@

            @foreach (var item in Model)
            {
                <tr>

                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.ISBN</td>
                    <td>@item.Author</td>
                    <td>@item.ListPrice</td>
                    <td>
                        <a class="btn btn-primary mx-2" asp-action="Edit" asp-route-id="@item.Id"> <i class="bi bi-pencil-square"></i>Edit</a>
                    </td>
                    <td>
                        <a class="btn btn-danger mx-2" asp-action="Delete" asp-route-id="@item.Id"> <i class="bi bi-trash3-fill"></i>Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
<script src="~/js/product.js"></script>
}