@model IEnumerable<CoverType>

<partial name="_Notification"></partial>
<div class="conatiner p-3">
    <div class="row mt-4">
        <div class="col-6">
            <h4>Cover Type</h4>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="Create"> <i class="bi bi-plus-circle-fill"></i>&nbsp; CoverType</a>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-12">
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td><a asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary"><i class="bi bi-pencil-square"></i>Edit</a></td>
                            <td><a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="bi bi-pencil-square"></i>Delete</a></td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>