@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
<partial name="_Notification"></partial>
<div class="conatiner p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Category" asp-action="Create">
                <i class="bi bi-plus-circle-fill"></i> &nbsp; Create a New Category
            </a>
        </div>
    </div>
<table class="table table-boardered table-striped" style="width:100%">
    <thead><tr>
        <th>Id</th>
        <th>Name</th>
        <th>Display Order</th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>
       @foreach(var item in Model)
        {
    <tr>
      
        <td>@item.Id</td>
        <td>@item.Name</td>
        <td>@item.DisplayOrder</td>
        <td><a class="btn btn-primary mx-2" asp-action="Edit" asp-route-id="@item.Id"> <i class="bi bi-pencil-square"></i>Edit</a>
           </td>
        <td><a class="btn btn-danger mx-2" asp-action="Delete" asp-route-id="@item.Id"> <i class="bi bi-trash3-fill"></i>Delete</a>
           </td>
    </tr>
        }
    </tbody>
</table>

</div>
